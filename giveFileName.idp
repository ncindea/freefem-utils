// a function to create a filename
func string giveFileName(string base, int digits, int n, string ext){
    string name;
    name = base;
    string ns = n;
    
    int numberOfZeros = digits - ns.length;
    string zeros = "";
    
    for (int i = 0; i < numberOfZeros; i++)
        zeros = zeros + "0";

    name = name + zeros + n + ext;
    return name;
}

